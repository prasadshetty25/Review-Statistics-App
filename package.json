{
  "name": "@reviews-monorepo/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:reviews-service": "npx nx serve reviews-service --output-style=stream",
    "dev:reviews-service:watch": "npx nx serve reviews-service --watch --output-style=stream",
    "dev:reviews-service:debug": "npx nx serve reviews-service --inspect",
    "dev:auth": "npx nx serve auth-service --output-style=stream",
    "dev:auth:watch": "npx nx serve auth-service --watch --output-style=stream",
    "dev:all": "npx nx run-many --target=serve --projects=reviews-service,auth-service --output-style=stream",
    "build:reviews-service": "npx nx build reviews-service",
    "build:reviews-service:prod": "npx nx build reviews-service --prod",
    "build:reviews-service:watch": "npx nx build reviews-service --watch",
    "build:auth": "npx nx build auth-service",
    "build:auth:prod": "npx nx build auth-service --prod",
    "build:all": "npx nx run-many --target=build --projects=reviews-service,auth-service",
    "start:reviews-service": "node dist/apps/reviews-service/main.js",
    "start:auth": "node dist/apps/auth-service/main.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs:reviews-service": "docker-compose logs -f reviews-service",
    "docker:logs:auth": "docker-compose logs -f auth-service",
    "docker:build": "docker-compose build"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "22.1.3",
    "@nx/eslint-plugin": "22.1.3",
    "@nx/js": "22.1.3",
    "@nx/nest": "22.1.3",
    "@nx/node": "22.1.3",
    "@nx/web": "22.1.3",
    "@nx/webpack": "22.1.3",
    "@nx/workspace": "22.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "20.19.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "nx": "22.1.3",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack-cli": "^5.1.4"
  }
}
